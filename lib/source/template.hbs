<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
	<title>{{{title}}}</title>
	<meta name="description" content="{{{description}}}">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="{{baseurl}}/assets/style.css">
	<link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="index" data-spy="scroll" data-target=".sidebar" id="app">
	<header>
		<div class="container hidden-xs">
			<div class="row">
				<div class="col-sm-2" style="text-align:center">
					<a class="logo" href="{{baseurl}}">
						{{{logo}}}
					</a>	
				</div>
				<div class="col-sm-10 menu">
					<ul>
						{{#each menu}}
							<li>
								<a href="{{this.href}}" title="{{this.title}}">{{this.title}}</a>
							</li>
						{{/each}}
					</ul>
				</div>
			</div>
		</div>
		<div class="container small-top visible-xs-block">
			<div class="row">
				<div class="col-xs-6" style="">
					<a class="logo" href="{{baseurl}}">
						{{{logo}}}
					</a>
				</div>
				<div class="col-xs-6" style="text-align:right;">
					<a onclick="showSidebar()">
						<i class="fa fa-bars"></i>
					</a>
				</div>
			</div>
		</div>
	</header>
	<main class="container">
		<div class="container-inner">
			<nav class="sidebar">
				<div class="pg_scrollable">
					<ul class="nav">
						{{#each links as |gp key|}}
							<h6>{{gp.name}}</h6>
							<ul class="nav" style="overflow: hidden; display: block;">
								{{#each gp.articles as |article key|}}
									<li v-for="page in group.pages">
										<a href='{{article.baseurl}}/{{article.link}}' id="/{{article.link}}">
											<i class="fa fa-chevron-right" style="font-size: 10px;display:none;" id="/{{article.link}}chevron"></i>
											{{article.name}}
										</a>
									</li>
								{{/each}}
							</ul>
						{{/each}}
					</ul>
				</div>
			</nav>
			<div class="side-overlay" onclick="hideSidebar();"><i class="fa fa-chevron-right"></i></div>
			<div class="row">
				<div class="col-md-9 col-sm-8 col-md-offset-3 col-sm-offset-4">
					<div class="content">
						<article>
							{{{body}}}
							<br><br><br>
							<div id="disqus_thread"></div>
							<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
							<footer class="page-footer">
								<div class="footer-menu">
									<ul>
										{{#each menu}}
											<li>
												<a href="{{this.href}}" title="{{this.title}}">{{this.title}}</a>
											</li>
										{{/each}}
									</ul>
								</div>
								{{{footer}}}
							</footer>
						</article>
					</div>
				</div>
			</div>
		</div>
	</main>
	<footer class="credit">{{{fixed_footer}}}</footer>

	<script src="{{baseurl}}/assets/script.js" type="text/javascript"></script>

	{{!-- Disqus --}}
	<script>
		if(location.pathname.length-1) {
			(function() { // DON'T EDIT BELOW THIS LINE
			var d = document, s = d.createElement('script');
			s.src = '//{{{disqusid}}}.disqus.com/embed.js';
			s.setAttribute('data-timestamp', +new Date());
			(d.head || d.body).appendChild(s);
			})();
		}
	</script>
	{{!-- Google analytics --}}
	<script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
	  ga('create', '{{{ga}}}', 'auto');
	  ga('send', 'pageview');
	</script>
</body>
</html>